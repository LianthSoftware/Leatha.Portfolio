@using Leatha.Portfolio.Blazor.Models
@inherits ComponentBase

<article class="project-card">
    <div class="card-thumb">
        <img src="@Project.ImagePath" alt="@Project.AltText" style="@ImageStyle" />
    </div>

    <div class="card-body">
        <h3 class="card-title">@Project.Name</h3>

        @if (!string.IsNullOrWhiteSpace(Project.DescriptionHtml))
        {
            // DescriptionHtml is treated as already-sanitized/trusted HTML you control.
            <div class="card-text">@((MarkupString)Project.DescriptionHtml)</div>
        }

        @if (Project.Tags is { Length: > 0 })
        {
            <div class="card-tags">
                @foreach (var tag in Project.Tags)
                {
                    <span class="tag">@tag</span>
                }
            </div>
        }

        <div style="border-top: 1px solid #0a2b2f; margin-top: 0.5rem; padding-top: 0.75rem;">
            <p class="subtitle" style="margin: 0.5rem; text-align: center; font-size: 1rem; color: #8bcac7;">
                @Project.YearRange
            </p>
        </div>
    </div>
</article>

@code {
    [Parameter, EditorRequired]
    public Project Project { get; set; } = default!;

    /// <summary>
    /// Optional inline style override for the <img/> (e.g., "object-fit: initial").
    /// </summary>
    [Parameter]
    public string? ImageStyle { get; set; }
}